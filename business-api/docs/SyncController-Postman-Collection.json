                  {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"endDate\": \"2024-01-31\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/sync/daily-sales",
                  "host": ["{{base_url}}"],
                  "path": ["sync", "daily-sales"]
                }
              },
              "response": []
            },
            {
              "name": "POST Sync Daily Sales - Invalid Date Range",
              "request": {
                "method": "POST",
                "header": [
                  {"key": "Content-Type", "value": "application/json"},
                  {"key": "Accept", "value": "application/json"},
                  {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"startDate\": \"2024-01-31\",\n  \"endDate\": \"2024-01-01\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/sync/daily-sales",
                  "host": ["{{base_url}}"],
                  "path": ["sync", "daily-sales"]
                }
              },
              "response": []
            }
          ]
        }
      ]
    }
  ]
}
