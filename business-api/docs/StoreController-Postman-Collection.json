            ],
            "url": {
              "raw": "{{base_url}}/stores/search?city=São Paulo&status=true&page=0&size=10&sortBy=code&sortDir=asc",
              "host": ["{{base_url}}"],
              "path": ["stores", "search"],
              "query": [
                {"key": "city", "value": "São Paulo"},
