              "host": ["{{base_url}}"],
              "path": ["stores", "{{store_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "GET All Stores",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Content-Type", "value": "application/json", "type": "text"},
              {"key": "Accept", "value": "application/json", "type": "text"},
              {"key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text"}
            ],
            "url": {
              "raw": "{{base_url}}/stores?page=0&size=10&sortBy=code&sortDir=asc",
              "host": ["{{base_url}}"],
              "path": ["stores"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"},
                {"key": "sortBy", "value": "code"},
                {"key": "sortDir", "value": "asc"}
              ]
            }
          },
          "response": []
